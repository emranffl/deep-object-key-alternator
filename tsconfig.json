{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
